<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dip"
        android:minHeight="500dip"
    >

        <TextView android:id="@+id/textViewName"
                  tools:text="Name of the Repo"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>

        <TextView android:id="@+id/textViewDescription"
                  tools:text="Some description"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>

        <TextView android:id="@+id/textViewThreeIssues"
                  android:layout_marginTop="16dip"
                  tools:text="First Contributor\nSecond Contributor\nThird Contributor"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>

        <TextView android:id="@+id/textViewThreeTopContributors"
                  android:layout_marginTop="16dip"
                  tools:text="First Issue\nSecond Issue\nThird Issue"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>

    </LinearLayout>
</layout>